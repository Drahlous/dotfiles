#!/bin/bash

# Simple Aliases
alias src='source ~/.zshrc'
alias cp='cp -i'
alias rfresh='xrdb -merge ~/.Xresources'
alias xclip='xclip -selection c'
alias ls='ls --human-readable --color'
alias sl='ls --human-readable --color'

# Suffix Aliases
alias -s md=mdless

# Plantuml
alias plant='java -jar ~/bin/plantuml.jar'

# Lazy ls -lA aliases
alias lsl='ls -lA'
alias lls='ls -lA'
alias lsa='ls -lA'
alias sla='ls -lA'
alias sls='ls -lA'
alias las='ls -lA'
alias lsls='ls -lA'
alias lsla='ls -lA'
alias lala='ls -lA'
alias lals='ls -lA'
alias lsal='ls -lA'
alias lasl='ls -lA'

# Python Virtual Environments
alias vsrc='source .venv/bin/activate'
